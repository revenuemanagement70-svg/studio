
{
  "entities": {
    "User": {
      "title": "User",
      "description": "Stores public-facing information for all users (guests, admins).",
      "type": "object",
      "properties": {
        "uid": { "type": "string", "description": "The user's unique Firebase Auth ID." },
        "email": { "type": "string", "format": "email", "description": "User's primary email address." },
        "displayName": { "type": "string", "description": "User's full name." },
        "photoURL": { "type": "string", "format": "uri", "description": "URL for the user's profile picture." },
        "createdAt": { "type": "string", "format": "date-time", "description": "Server timestamp of account creation." }
      },
      "required": ["uid", "email", "displayName"]
    },
    "Hotel": {
      "title": "Hotel",
      "description": "The central collection for all hotel properties on the platform.",
      "type": "object",
      "properties": {
        "name": { "type": "string", "description": "The official name of the hotel." },
        "description": { "type": "string", "description": "A detailed marketing description." },
        "address": {
          "type": "object",
          "properties": {
            "street": { "type": "string" },
            "city": { "type": "string" },
            "state": { "type": "string" },
            "postalCode": { "type": "string" },
            "country": { "type": "string" }
          }
        },
        "location": { "type": "string", "description": "Firestore GeoPoint for map-based queries." },
        "imageUrls": { "type": "array", "items": { "type": "string", "format": "uri" } },
        "amenities": { "type": "array", "items": { "type": "string" } },
        "starRating": { "type": "number", "description": "The hotel's star rating (e.g., 4.5)." },
        "contact": {
          "type": "object",
          "properties": {
            "phone": { "type": "string" },
            "email": { "type": "string", "format": "email" }
          }
        },
        "isActive": { "type": "boolean", "description": "If the hotel is live and bookable." },
        "createdAt": { "type": "string", "format": "date-time" }
      },
      "required": ["name", "address", "location", "isActive"]
    },
    "Room": {
      "title": "Room",
      "description": "Stores the definitions of room *types* for each hotel.",
      "type": "object",
      "properties": {
        "hotelId": { "type": "string", "description": "FK to /hotels." },
        "roomTypeId": { "type": "string", "description": "Internal or OTA identifier." },
        "name": { "type": "string", "description": "Name of the room type (e.g., 'Deluxe King Room')." },
        "description": { "type": "string" },
        "capacity": { "type": "number", "description": "Maximum number of guests." },
        "beds": {
          "type": "object",
          "properties": {
            "king": { "type": "number" },
            "queen": { "type": "number" },
            "twin": { "type": "number" }
          }
        },
        "imageUrls": { "type": "array", "items": { "type": "string", "format": "uri" } },
        "amenities": { "type": "array", "items": { "type": "string" } },
        "totalInventory": { "type": "number", "description": "Total number of physical rooms of this type." }
      },
      "required": ["hotelId", "name", "capacity", "totalInventory"]
    },
    "Availability": {
      "title": "Availability",
      "description": "Stores the price and inventory for a room type on a specific date.",
      "type": "object",
      "properties": {
        "roomId": { "type": "string", "description": "FK to /rooms." },
        "hotelId": { "type": "string", "description": "Denormalized FK to /hotels." },
        "date": { "type": "string", "format": "date", "description": "The date for this entry (YYYY-MM-DD)." },
        "price": { "type": "number", "description": "Price in smallest currency unit (e.g., paise)." },
        "roomsAvailable": { "type": "number", "description": "Number of rooms available for booking." }
      },
      "required": ["roomId", "hotelId", "date", "price", "roomsAvailable"]
    },
    "Booking": {
      "title": "Booking",
      "description": "A record for every booking made on the platform.",
      "type": "object",
      "properties": {
        "userId": { "type": "string", "description": "FK to /users." },
        "hotelId": { "type": "string", "description": "FK to /hotels." },
        "roomId": { "type": "string", "description": "FK to /rooms." },
        "checkInDate": { "type": "string", "format": "date" },
        "checkOutDate": { "type": "string", "format": "date" },
        "numGuests": { "type": "number" },
        "totalAmount": { "type": "number", "description": "Total price in smallest currency unit." },
        "status": { "type": "string", "enum": ["confirmed", "cancelled", "completed"] },
        "bookedAt": { "type": "string", "format": "date-time" },
        "paymentId": { "type": "string", "description": "FK to /payments." }
      },
      "required": ["userId", "hotelId", "roomId", "checkInDate", "checkOutDate", "numGuests", "totalAmount", "status", "bookedAt"]
    },
    "Favorite": {
      "title": "Favorite",
      "description": "Stores a user's favorited hotels.",
      "type": "object",
      "properties": {
        "userId": { "type": "string", "description": "FK to /users." },
        "hotelId": { "type": "string", "description": "FK to /hotels." },
        "createdAt": { "type": "string", "format": "date-time" }
      },
      "required": ["userId", "hotelId"]
    },
    "Payment": {
      "title": "Payment",
      "description": "A ledger of all financial transactions.",
      "type": "object",
      "properties": {
        "bookingId": { "type": "string", "description": "FK to /bookings." },
        "userId": { "type": "string", "description": "FK to the user who paid." },
        "amount": { "type": "number", "description": "Amount in smallest currency unit." },
        "currency": { "type": "string", "enum": ["INR", "USD"] },
        "status": { "type": "string", "enum": ["succeeded", "failed", "pending"] },
        "provider": { "type": "string", "description": "Payment gateway used (e.g., 'stripe')." },
        "providerTransactionId": { "type": "string" },
        "createdAt": { "type": "string", "format": "date-time" }
      },
      "required": ["bookingId", "userId", "amount", "currency", "status", "provider", "createdAt"]
    },
    "Admin": {
      "title": "Admin",
      "description": "Links users to roles and the hotels they manage for RBAC.",
      "type": "object",
      "properties": {
        "userId": { "type": "string", "description": "The uid of the user being granted admin rights." },
        "hotelId": { "type": "string", "description": "FK to /hotels. Null for super_admin." },
        "role": { "type": "string", "enum": ["hotel_admin", "super_admin"] }
      },
      "required": ["userId", "role"]
    }
  },
  "auth": {
    "providers": ["anonymous", "google.com", "password"]
  },
  "firestore": {
    "/users/{userId}": {
      "schema": { "$ref": "#/entities/User" },
      "description": "Stores public user profile information."
    },
    "/hotels/{hotelId}": {
      "schema": { "$ref": "#/entities/Hotel" },
      "description": "Master collection of all hotel properties."
    },
    "/rooms/{roomId}": {
      "schema": { "$ref": "#/entities/Room" },
      "description": "Definitions of room types for all hotels."
    },
    "/availability/{roomId}_{date}": {
      "schema": { "$ref": "#/entities/Availability" },
      "description": "Daily inventory and pricing for each room type."
    },
    "/bookings/{bookingId}": {
      "schema": { "$ref": "#/entities/Booking" },
      "description": "Collection of all bookings made on the platform."
    },
    "/favorites/{userId}_{hotelId}": {
      "schema": { "$ref": "#/entities/Favorite" },
      "description": "Tracks user's favorite hotels."
    },
    "/payments/{paymentId}": {
      "schema": { "$ref": "#/entities/Payment" },
      "description": "Ledger of all payment transactions."
    },
    "/admins/{adminId}": {
      "schema": { "$ref": "#/entities/Admin" },
      "description": "Manages role-based access for hotel and super admins."
    }
  }
}
