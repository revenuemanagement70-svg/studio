
rules_version = '2';

service cloud.firestore {
  match /databases/{database}/documents {

    // Helper functions
    function isSignedIn() {
      return request.auth != null;
    }

    function isOwner(userId) {
      return request.auth.uid == userId;
    }
    
    // Simplified validation: check for the most essential fields.
    function isHotelDataValid(data) {
        return data.name is string && data.name.size() > 0
            && data.city is string && data.city.size() > 0
            && data.price is number && data.price > 0
            && data.rating is number && data.rating >= 1 && data.rating <= 5
            && data.description is string && data.description.size() > 0;
    }

    // HOTELS
    // Allow anyone to read hotel listings.
    // Allow any signed-in user to create, update, or delete hotels.
    match /hotels/{hotelId} {
      allow read: if true;
      // Allow creation if the user is signed in and the data is valid.
      // Allow updates/deletes if the user is signed in.
      allow write: if isSignedIn();

      // Availability can be read by anyone, but only written by signed-in users.
      match /availability/{availabilityId} {
        allow read: if true;
        allow write: if isSignedIn();
      }
    }

    // USER DATA
    // Users can only access their own data (favorites).
    match /users/{userId} {
      allow read, write: if isOwner(userId);
      
      match /favorites/{favoriteId} {
        allow read, write: if isOwner(userId);
      }
    }

    // BOOKINGS
    // Only the user who created the booking can read it.
    // Signed-in users can create bookings (further validation is in the transaction).
    match /bookings/{bookingId} {
      allow read: if isSignedIn() && resource.data.userId == request.auth.uid;
      allow create: if isSignedIn();
      allow update, delete: if false; // Bookings are immutable by users.
    }
  }
}
