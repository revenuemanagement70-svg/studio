
rules_version = '2';
service cloud.firestore {
  match /databases/{database}/documents {

    // Helper: Check if user is signed in
    function isSignedIn() {
      return request.auth != null;
    }

    // Helper: Check if user is the admin (requires custom claim or specific UID)
    function isAdmin() {
      return request.auth != null && request.auth.token.admin == true;
    }

    // ------------------------------------------
    // DRAFTS (No longer in use, but keeping for reference)
    // ------------------------------------------
    match /hotels_draft/{draftId} {
      allow read, create, update: if isSignedIn();
      allow delete: if isAdmin();
    }

    // ------------------------------------------
    // LIVE HOTELS (Temporarily open for debugging)
    // ------------------------------------------
    match /hotels/{hotelId} {
      allow read: if true;
      // Temporarily allowing any signed-in user to write.
      allow write: if isSignedIn();

      match /availability/{availabilityId} {
        allow read: if true;
        allow write: if isSignedIn();
      }
    }

    // ------------------------------------------
    // USERS
    // ------------------------------------------
    match /users/{userId} {
      allow read, write: if request.auth != null && request.auth.uid == userId;
      match /favorites/{favoriteId} {
        allow read, write: if request.auth != null && request.auth.uid == userId;
      }
    }

    // ------------------------------------------
    // BOOKINGS
    // ------------------------------------------
    match /bookings/{bookingId} {
      allow read: if isSignedIn() && resource.data.userId == request.auth.uid;
      allow create: if isSignedIn();
      allow update, delete: if false;
    }
  }
}
