
rules_version = '2';

service cloud.firestore {
  match /databases/{database}/documents {

    // Helper: Check if user is signed in
    function isSignedIn() {
      return request.auth != null;
    }

    // Helper: Check if user is the admin (your UID)
    function isAdmin() {
      // IMPORTANT: Replace "YOUR_ADMIN_UID" with your actual Firebase User ID.
      return request.auth != null &&
             request.auth.uid == "YOUR_ADMIN_UID";
    }

    // ------------------------------------------
    // HOTELS (Admin writes, public reads)
    // ------------------------------------------
    match /hotels/{hotelId} {

      // Public can read hotels
      allow read: if true;

      // ONLY admin can create a property
      allow create: if isAdmin();

      // ONLY admin can edit or delete
      allow update, delete: if isAdmin();

      // Availability sub-collection
      match /availability/{availabilityId} {
        allow read: if true;
        allow write: if isAdmin();
      }
    }

    // ------------------------------------------
    // USERS (Only user can access their own data)
    // ------------------------------------------
    match /users/{userId} {
      allow read, write: if request.auth != null
                          && request.auth.uid == userId;

      match /favorites/{favoriteId} {
        allow read, write: if request.auth != null
                            && request.auth.uid == userId;
      }
    }

    // ------------------------------------------
    // BOOKINGS
    // ------------------------------------------
    match /bookings/{bookingId} {
      allow read: if isSignedIn() 
                   && resource.data.userId == request.auth.uid;

      // Any signed-in user can create a booking
      allow create: if isSignedIn();

      // Users cannot update/delete bookings
      allow update, delete: if false;
    }
  }
}
